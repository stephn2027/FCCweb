.order-enter
  transform:translateX(-120%)
  transition .5s
  max-height: 0
  padding: 0 !important
&.order-enter-active
  max-height: 90px
  transform:translateX(-0%)
  padding: 2rem !important 
.order-exit
  transition .5s
  transform:translateX(0)
&.order-exit-active 
  background red
  transform:translateX(120%)
  padding: 0
.count-enter  
  transform translateY(100%)
  transition: .7s
&.count-enter-active
   transform translateY(0%)
.count-exit
  transform translateY(0%)
  transition .7s
  position absolute
  left 0
  top 0
&.count-exit-active
   transform translateY(-100%)